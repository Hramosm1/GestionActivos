@page "{id:int}/{dt:int}"
@model itmanager.Pages.Active.Disc.DeleteModel

@{
    ViewData["Module"] = "Discos";
    ViewData["Title"] = "Borrado de Discos";
}

<h3>Quieres eliminar este registro?</h3>
<div>
    <h4><strong>Disco ID: @Html.DisplayFor(model => model.Disco.DdId)</strong></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Capacidad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Disco.DdCapacidad)
        </dd>
        <dt class="col-sm-2">
           Tipo de Disco
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Disco.Tdd.TddNombre)
        </dd>
         <dt class="col-sm-2">
            Activo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Disco.Act.ActId)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Disco.DdId" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-warning" asp-route-id="@RouteData.Values["id"]">Volver a la lista</a>
    </form>

</div>

