@page "{id:int}"
@model itmanager.Pages.Active.DeleteModel

@{
    ViewData["Module"] = "Activos";
    ViewData["Title"] = "Borrado de Activos";
}

<partial name="_Breadcrumb"/>

<h3>Quieres eliminar este registro?</h3>
<div>
    <h4><strong>Activo ID: @Html.DisplayFor(model => model.ActActivo.ActId)</strong></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Modelo</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActActivo.ActModelo)
        </dd>
        <dt class="col-sm-2">Serie</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActActivo.ActSerie)
        </dd>
        <dt class="col-sm-2">Observaciones</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActActivo.ActObservaciones)
        </dd>
        <dt class="col-sm-2">Imagen #1</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActActivo.ActImagen1)
        </dd>
        <dt class="col-sm-2">Imagen#2</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActActivo.ActImagen2)
        </dd>
        <dt class="col-sm-2">Fecha de Compra </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActActivo.ActFechacompra)
        </dd>
        <dt class="col-sm-2">Nro de Compra </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActActivo.ActNrocompra)
        </dd>
        <dt class="col-sm-2">Proveedor</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActActivo.ActProveedorcompra)
        </dd>
        <dt class="col-sm-2">Tipo de Activo</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActActivo.Tac.TacId)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ActActivo.ActId" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-warning">Volver a la listat</a>
    </form>
</div>
<br />
