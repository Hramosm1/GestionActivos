@page "{id:int}"
@model itmanager.Pages.Users.DeleteModel

@{
    ViewData["Module"] = "Usuarios";
    ViewData["Title"] = "Borrado de Usuario";
}

<partial name="_Breadcrumb"/>

<h3>Quieres eliminar este registro?</h3>
<div>
    <h4><strong>Usuario ID: @Html.DisplayFor(model => model.UsuUsuario.UsuId)</strong></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuUsuario.UsuNombre)
        </dd>
        <dt class="col-sm-2">
           Fecha Final
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuUsuario.UsuFechaFinal)
        </dd>
        <dt class="col-sm-2">
            Login
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuUsuario.UsuLogin)
        </dd>
        <dt class="col-sm-2">
           Admin
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuUsuario.UsuAdmin)
        </dd>
        <dt class="col-sm-2">
            Bloqueado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuUsuario.UsuBloqueado)
        </dd>
        <dt class="col-sm-2">
            Imagen
        </dt>
        <dd class="col-sm-10">
            <img src="/images/profile/@Html.DisplayFor(model => model.UsuUsuario.UsuImagen)" onerror="this.onerror=null;this.src='images/profile/noimg.jpg';"/>
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="UsuUsuario.UsuId" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-warning">Volver a la lista</a>
    </form>
</div>
<br />