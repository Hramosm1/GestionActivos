@page "{id:int}"
@model itmanager.Pages.Users.DetailsModel

@{
    ViewData["Module"] = "Usuarios";
    ViewData["Title"] = "Detalle de Usuario";
}

<partial name="_Breadcrumb"/>

<div>
    <h4>Usuario ID: @Html.DisplayFor(model => model.UsuUsuario.UsuId)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuUsuario.UsuNombre)
        </dd>
        <dt class="col-sm-2">
           Fecha Final
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuUsuario.UsuFechaFinal)
        </dd>
        <dt class="col-sm-2">
            Login
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuUsuario.UsuLogin)
        </dd>
        <dt class="col-sm-2">
           Admin
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuUsuario.UsuAdmin)
        </dd>
        <dt class="col-sm-2">
            Bloqueado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuUsuario.UsuBloqueado)
        </dd>
        <dt class="col-sm-2">
            Imagen
        </dt>
        <dd class="col-sm-10">
            <img src="/images/profile/@Html.DisplayFor(model => model.UsuUsuario.UsuImagen)" onerror="this.onerror=null;this.src='images/profile/noimg.jpg';"/>
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.UsuUsuario.UsuId">Editar</a> |
    <a class="btn btn-warning" asp-page="./Index">Volver a la lista</a>
</div>
<br />