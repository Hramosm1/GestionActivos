@page
@model itmanager.Pages.Parameters.IndexModel

@{
    ViewData["Module"] = "Parametros";
    ViewData["Title"] = "Listado de Parametros";
}

<partial name="_Breadcrumb"/>
<p style="margin-top:10px"><a asp-page="Create" class="btn btnew btn-warning">Crear nuevo</a></p>

<div class="ibox-content">
	<div class="col-lg-12">
        <div class="">
            <table id="datagrid" class="display">
                <thead>
                    <tr>
                        <th width="30%">
                            Nombre
                        </th>
                        <th width="30%">
                            Valor #1
                        </th>
                        <th width="20%">
                            Valor #2
                        </th>
                        <th width="20%">
                            Tipo
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model.ParParametro) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ParNombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ParValor1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ParValor2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ParTipoNavigation.TipNombre)
                        </td>
                        <td nowrap>
                              <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.ParId">Editar</a>
                            | <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.ParId">Detalle</a>
                            | <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ParId">Borrar</a>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />
