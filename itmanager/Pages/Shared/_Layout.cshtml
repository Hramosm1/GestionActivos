@using itmanager.Class
@using itmanager.Models;
@using itmanager.Pages;

@{
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="initial-scale=1.0, target-densitydpi=device-dpi" /><!-- this is for mobile (Android) Chrome -->
    <meta name="viewport" content="initial-scale=1.0, width=device-height"><!--  mobile Safari, FireFox, Opera Mobile  -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>@ViewData["Title"] - itmanager</title>
   
    <script src="~/js/font-awesome-912497cdbf.js" crossorigin="anonymous"></script>
    <!-- JQuery // Boostrap -->
    <script src="~/js/jquery-3.6.0.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
</head>

@{
    if (ViewData["Breadcrumb"] != null)
    {
        BreadcrumbInfo Breadcrumb = (BreadcrumbInfo)ViewData["Breadcrumb"];
        ViewBag.Breadcrumb = Breadcrumb;

        <partial name="_Menu" model="Breadcrumb" />

    }
}

<body>
    <div id="wrapper">
        <div id="page-wrapper" class="gray-bg dashbard-1">
        <div class="row border-bottom">
        <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
            </div>
            <ul class="nav navbar-top-links navbar-right">
                <li style="padding: 20px">
                    <span class="m-r-sm text-muted welcome-message">Welcome to IT+ Manager.</span>
                </li>
                <li>
                    <a href="/">
                        <i class="fa fa-sign-out"></i> Log out
                    </a>
                </li>
                <li>
                    <a class="right-sidebar-toggle" style="display:none">
                        <i class="fa fa-tasks"></i>
                    </a>
                </li>
            </ul>

        </nav>
        </div>
  
        @RenderBody()

        @*
            <div class="footer">
                <div class="float-right">
                    10GB of <strong>250GB</strong> Free.
                </div>
                <div>
                    <strong>Copyright</strong> Company &copy; 2022
                </div>
            </div>
        *@
        </div>

    </div>

    <!-- Utilities -->
    <script src="~/js/sweetalert2@11.js"></script>


       <!-- Datatables.net -->
    <link rel="stylesheet" href="~/css/plugins/datatables/jquery.dataTables.min.css">
    <link rel="stylesheet" href="~/css/plugins/datatables/buttons.dataTables.min.css">   
    <script src="~/js/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/js/plugins/datatables/dataTables.buttons.min.js"></script>
    <script src="~/js/plugins/datatables/buttons.html5.min.js"></script>


    <script src="~/js/popper.min.js"></script>
    <script src="~/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="~/js/inspinia.js"></script>
    <script src="~/js/plugins/pace/pace.min.js"></script>



    <script>

    $(document).ready(function() {

        if($('#datagrid'))
            $('#datagrid').DataTable({
              autoWidth: false,              
                dom: 'Bfrtip',
                    buttons: [
                        'copyHtml5',
                        'excelHtml5',
                        'csvHtml5',
                        'pdfHtml5'
                    ]
        } );


        if($('#datagridopc'))
            $('#datagridopc').DataTable({
              autoWidth: false,  
              paging: false,
              ordering: false,
              searching: false
        } );

    } );

    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>