@page
@model itmanager.Pages.Inventory.CreateModel

@{
    ViewData["Module"] = "Inventario";
    ViewData["Title"] = "Creación de Inventario";
}
<partial name="_Breadcrumb"/>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post" class="formbox">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
            <div class="item item-4">
                <label asp-for="InvInventario.InvNombre" class="control-label">Nombre de Inventario</label>
                <input asp-for="InvInventario.InvNombre" class="form-control" />
                <span asp-validation-for="InvInventario.InvNombre" class="text-danger"></span>
            </div>

            <div class="item">
                <label asp-for="InvInventario.InvInicio" class="control-label">Fecha de Inicio</label>
                <input asp-for="InvInventario.InvInicio" class="form-control" />
                <span asp-validation-for="InvInventario.InvInicio" class="text-danger"></span>
            </div>
            <div class="item">
                <label asp-for="InvInventario.InvFin" class="control-label">Fecha de FIn</label>
                <input asp-for="InvInventario.InvFin" class="form-control" />
                <span asp-validation-for="InvInventario.InvFin" class="text-danger"></span>
            </div>
            <div class="item item-5">
                <input type="submit" value="Crear" class="btn btn-primary" /> | 
                <a class="btn btn-warning" asp-page="Index">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>
<br />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

