@page "{id:int}"
@model itmanager.Pages.ProcessorType.DeleteModel

@{
    ViewData["Module"] = "Tipos de Procesador";
    ViewData["Title"] = "Borrado de Tipo de Procesador";
}

<partial name="_Breadcrumb"/>

<h3>Quieres eliminar este registro?</h3>
<div>
    <h4><strong>Tipo de Procesador ID: @Html.DisplayFor(model => model.TprTipoProcesador.TprId)</strong></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TprTipoProcesador.TprNombre)
        </dd>
        <dt class="col-sm-2">
            Imagen
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TprTipoProcesador.TprImagen)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="TprTipoProcesador.TprId" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-warning">Volver a la lista</a>
    </form>
</div>
<br />